<UserControl x:Class="Dicom_side.Dicom_sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dicom_side"
             mc:Ignorable="d" 
             x:Name="big_window"
             d:DesignHeight="1080" Width="262" Loaded="UserControl_Loaded">
    <Grid>
        <Border BorderBrush="#FF44626F" BorderThickness="0,0,1,0" Margin="0,0,10,0" Padding="5,0,5,0">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
                <Grid x:Name="grid_show_thumbnails" >
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
